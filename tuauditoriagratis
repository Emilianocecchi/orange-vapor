    <script>
        // Smooth scroll animation on page load
        function animateOnScroll() {
            const elements = document.querySelectorAll('.fade-in');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            });
            
            elements.forEach(element => {
                observer.observe(element);
            });
        }

        // Enhanced WhatsApp button
        function enhanceWhatsAppButton() {
            const whatsappButton = document.querySelector('.whatsapp-float');
            let messageCount = 0;
            
            // Create notification badge
            const badge = document.createElement('span');
            badge.style.cssText = `
                position: absolute;
                top: -5px;
                right: -5px;
                background: #FF6B35;
                color: white;
                width: 25px;
                height: 25px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 12px;
                font-weight: bold;
                animation: pulse 1s infinite;
            `;
            badge.textContent = '1';
            
            // Show badge after 5 seconds
            setTimeout(() => {
                whatsappButton.appendChild(badge);
            }, 5000);
            
            // Create tooltip
            const tooltip = document.createElement('div');
            tooltip.style.cssText = `
                position: absolute;
                right: 80px;
                top: 50%;
                transform: translateY(-50%);
                background: white;
                color: #333;
                padding: 10px 15px;
                border-radius: 8px;
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
                white-space: nowrap;
                opacity: 0;
                pointer-events: none;
                transition: opacity 0.3s;
                font-size: 14px;
                font-weight: 500;
            `;
            tooltip.textContent = '춰Hola! 쯈uieres tu auditor칤a gratis?';
            whatsappButton.appendChild(tooltip);
            
            // Show tooltip periodically
            setInterval(() => {
                tooltip.style.opacity = '1';
                setTimeout(() => {
                    tooltip.style.opacity = '0';
                }, 3000);
            }, 10000);
        }

        // Highlight CTA sections
        function highlightCTAs() {
            const ctaSections = document.querySelectorAll('.cta-section');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('focus-glow');
                        setTimeout(() => {
                            entry.target.classList.remove('focus-glow');
                        }, 3000);
                    }
                });
            }, {
                threshold: 0.5
            });
            
            ctaSections.forEach(section => {
                observer.observe(section);
            });
        }

        // Track time on page and show exit intent
        function trackEngagement() {
            let timeOnPage = 0;
            setInterval(() => {
                timeOnPage++;
                
                // After 30 seconds, make WhatsApp button bigger
                if (timeOnPage === 30) {
                    const whatsappButton = document.querySelector('.whatsapp-float');
                    whatsappButton.style.transform = 'scale(1.2)';
                    setTimeout(() => {
                        whatsappButton.style.transform = 'scale(1)';
                    }, 2000);
                }
            }, 1000);
        }

        // Initialize all functions
        document.addEventListener('DOMContentLoaded', function() {
            animateOnScroll();
            enhanceWhatsAppButton();
            highlightCTAs();
            trackEngagement();
            
            // Add click tracking
            document.querySelectorAll('a[href*="wa.me"]').forEach(link => {
                link.addEventListener('click', function() {
                    console.log('WhatsApp link clicked:', this.textContent.trim());
                });
            });
        });

        // Exit intent popup
        document.addEventListener('mouseleave', function(e) {
            if (e.clientY <= 0 && !localStorage.getItem('exitIntentShown')) {
                localStorage.setItem('exitIntentShown', 'true');
                
                // Make WhatsApp button pulse more intensely
                const whatsappButton = document.querySelector('.whatsapp-float');
                whatsappButton.style.animation = 'pulse 0.5s infinite';
                whatsappButton.style.transform = 'scale(1.3)';
                
                setTimeout(() => {
                    whatsappButton.style.animation = 'pulse 2s infinite';
                    whatsappButton.style.transform = 'scale(1)';
                }, 5000);
            }
        });
    </script>
</body>
</html>
