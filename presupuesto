    <script>
        // Set today's date as default
        document.addEventListener('DOMContentLoaded', function() {
            setToday();
            calculateTotals();
            
            // Add event listeners
            const serviceCheckboxes = document.querySelectorAll('.service-checkbox');
            
            serviceCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', calculateTotals);
            });
        });

        // Set today's date
        function setToday() {
            const today = new Date();
            const formattedDate = today.toISOString().split('T')[0];
            document.getElementById('presupuesto-date').value = formattedDate;
            
            // Set project start date to next Monday by default
            let nextMonday = new Date();
            nextMonday.setDate(nextMonday.getDate() + (8 - nextMonday.getDay()) % 7);
            document.getElementById('project-start-date').value = nextMonday.toISOString().split('T')[0];
        }

        // Reset the form
        function resetForm() {
            // Reset checkboxes
            document.getElementById('check-meta').checked = true;
            document.getElementById('check-google').checked = true;
            document.getElementById('check-email').checked = true;
            document.getElementById('check-chatbot').checked = true;
            document.getElementById('check-express').checked = false;
            
            // Reset client info
            document.getElementById('client-name').value = '';
            document.getElementById('client-company').value = '';
            document.getElementById('client-email').value = '';
            document.getElementById('client-phone').value = '';
            
            // Reset project info
            document.getElementById('project-name').value = 'Estrategia de Marketing Digital';
            document.getElementById('project-duration').value = '6 meses';
            
            // Reset dates
            setToday();
            
            // Recalculate totals
            calculateTotals();
            
            // Show toast
            showToast('Formulario restablecido');
        }

        // Calculate totals based on selected services
        function calculateTotals() {
            const services = [
                {
                    id: 'meta',
                    checked: document.getElementById('check-meta').checked,
                    price: 299
                },
                {
                    id: 'google',
                    checked: document.getElementById('check-google').checked,
                    price: 299
                },
                {
                    id: 'email',
                    checked: document.getElementById('check-email').checked,
                    price: 299
                },
                {
                    id: 'chatbot',
                    checked: document.getElementById('check-chatbot').checked,
                    price: 299
                },
                {
                    id: 'express',
                    checked: document.getElementById('check-express').checked,
                    price: 299
                }
            ];
            
            // Calculate subtotal
            const subtotal = services.reduce((sum, service) => {
                return sum + (service.checked ? service.price : 0);
            }, 0);
            
            // Check if full package discount applies
            const hasAllCore = services.slice(0, 4).every(service => service.checked);
            const discountRow = document.getElementById('discount-row');
            let discount = 0;
            
            if (hasAllCore) {
                discount = 196;
                discountRow.style.display = '';
            } else {
                discountRow.style.display = 'none';
            }
            
            // Calculate total
            const total = subtotal - discount;
            
            // Update summary
            document.getElementById('summary-subtotal').textContent = `US$${subtotal.toFixed(2)}`;
            document.getElementById('summary-discount').textContent = `-US$${discount.toFixed(2)}`;
            document.getElementById('summary-total').textContent = `US$${total.toFixed(2)}`;
        }

        // Show toast notification
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
    </script>
</body>
</html>
